<% layout("/layouts/boilerplate") %>
<section class="pages-hero about-hero mb-4">
  <div class="overlay"></div>
  <div class="content container text-center">
    <h1 class="display-5 fw-bold text-white">About Rentify</h1>
    <p class="lead text-white-50">Our journey to make stays simple, beautiful, and trustworthy.</p>
  </div>
</section>

<section class="container about-section mb-5">
  <div class="row g-4 align-items-stretch">
    <div class="col-12 col-lg-7">
      <div class="p-card p-4 h-100">
        <h4 class="fw-semibold">Our Mission</h4>
        <p>We believe finding a place to stay should be joyful. From city escapes to mountain cabins, we help guests discover spaces they love and help hosts share their world with ease.</p>
        <div class="divider my-3"></div>
        <h5 class="fw-semibold">Values</h5>
        <ul class="mb-0">
          <li>Trust and transparency</li>
          <li>Delightful, accessible design</li>
          <li>Host and guest success</li>
        </ul>
      </div>
    </div>
    <div class="col-12 col-lg-5">
      <div class="p-card p-4 h-100">
        <h5 class="fw-semibold">By the Numbers</h5>
        <div class="row g-3 mt-1">
          <div class="col-6"><div class="stat"><h3>10K+</h3><div class="text-muted">Listings</div></div></div>
          <div class="col-6"><div class="stat"><h3>50K+</h3><div class="text-muted">Guests</div></div></div>
          <div class="col-6"><div class="stat"><h3>200+</h3><div class="text-muted">Cities</div></div></div>
          <div class="col-6"><div class="stat"><h3>24/7</h3><div class="text-muted">Support</div></div></div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="container quote-wrap mb-5">
  <div class="quote-card p-4 p-md-5 text-center">
    <p class="display-6 mb-1">“Home is not a place, it's a feeling.”</p>
    <div class="divider my-3"></div>
    <p class="text-muted">We’re here to help you find that feeling wherever you go.</p>
  </div>
</section>
