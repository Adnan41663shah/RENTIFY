<nav class="navbar navbar-expand-md navbar-light sticky-top">
  <div class="container-fluid">
    <!-- Logo -->
      <a class="navbar-brand" href="/listings">
        <img src="/assets/rentifylogo2.png" alt="logo" height="200px" width="200px">
      </a>

    <!-- Hamburger toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible links -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="w-100 d-flex align-items-center">
        <!-- Left: Home + primary links -->
        <div class="navbar-nav">
          <a class="nav-link home-btn" href="/listings">Home</a>
          <a class="nav-link<%= (typeof currentPath !== 'undefined' && currentPath.startsWith('/features')) ? ' active' : '' %>" href="/features">Features</a>
          <a class="nav-link<%= (typeof currentPath !== 'undefined' && currentPath.startsWith('/about')) ? ' active' : '' %>" href="/about">About</a>
          <a class="nav-link<%= (typeof currentPath !== 'undefined' && currentPath.startsWith('/contact')) ? ' active' : '' %>" href="/contact">Contact</a>
        </div>

        <!-- Right: auth/profile -->
        <div class="navbar-nav ms-auto text-end">
          <% if(!currUser) { %>
            <a class="nav-link signup-btn" href="/signup">Signup</a>
            <a class="nav-link login-btn" href="/login">Login</a>
          <% } %>
          <% if(currUser){ %>
            <p class="nav-link mb-0">Welcome, <%= currUser.username %></p>

            <!-- Desktop view user circle with tooltip -->
            <% if(!currUser.profileImage){ %>
              <div class="nav-link user-ch d-none d-md-block">
                <a href="/profile/<%= currUser._id  %>"><%= currUser.username[0].toUpperCase() %></a>
                <span class="tooltip-text">My Profile</span>
              </div>
            <% }else{ %>
              <div class="nav-link user-ch d-none d-md-block">
                <a href="/profile/<%= currUser._id %>"><img src="<%= currUser.profileImage %>"></a>
                <span class="tooltip-text">My Profile</span>
              </div>
            <% } %>

