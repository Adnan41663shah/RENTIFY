<% layout("/layouts/boilerplate") %>

  <!-- Hero Section -->
  <section id="hero" class="w-100">
    <div class="overlay"></div>
    <div class="content">
      <h1>Find Your Perfect</h1>
      <h1><span>Home Away From Home</span></h1>
      <p>Discover amazing rooms, apartments, and homes worldwide. Book with confidence, stay with comfort.</p>
      <div class="button-container">
        <a class="explore-button" href="/listings/allListing"><i class="fa-solid fa-search"></i> Start Exploring</a>
        <a class="upload-btn" href="/listings/new"><i class="fa-solid fa-table-list"></i>List Your Property</a>
      </div>
      <div class="stats-container">
        <div class="stat-box">
          <h2 class="tenk">10K+</h2>
          <p>Properties</p>
        </div>
        <div class="stat-box">
          <h2 class="fiftyk">50K+</h2>
          <p>Happy Guests</p>
        </div>
        <div class="stat-box">
