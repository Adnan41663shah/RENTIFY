  <div class="row justify-content-center text-center mt-6">
    <h2 class="mt-3 mb-3 fw-bold">Featured Properties</h2>
    <p class="fs-4">Discover our handpicked selection of amazing properties.</p>
  </div>

  <!-- Listings -->
  <div class="row listings-container mt-3">
    <% for(let i = 0; i < allListings.length && i < 4; i++) {
      let listing = allListings[i]; %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card">
          <!-- Wishlist Heart -->
          <div class="wishlist">
            <i class="fa-solid fa-heart"></i>
          </div>
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <h4 class="card-text">
              <b><%= listing.title %></b>
            </h4>
            <p class="card-text">
              <i class="fa-solid fa-location-dot"></i>
              <%= listing.location %>, <%= listing.country %>
            </p>
            <p><b>&#x20B9;<%= listing.price.toLocaleString("en-IN") %> </b>/ Night</p>
          </div>
        </div>
      </a>
      <% } %>
  </div>