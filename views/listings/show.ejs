      const editSearch = document.getElementById("edit-amenities-search");
      if (editSearch) {
        editSearch.addEventListener("input", (e)=> renderEditAmenities(e.target.value));
      }

      // Multistep form functionality
      const editPanes = Array.from(document.querySelectorAll('#editListingModal .nl-step-pane'));
      const editSteps = Array.from(document.querySelectorAll('#editListingModal .nl-step'));
      const editBtnNext = document.getElementById('editBtnNext');
      const editBtnBack = document.getElementById('editBtnBack');
      const editBtnSubmit = document.getElementById('editBtnSubmit');
      const editForm = document.getElementById('editListingMultiForm');
      let editCurrent = 1;

      function setEditActiveStep(step){
        editCurrent = step;
        editPanes.forEach(p => p.classList.toggle('d-none', p.getAttribute('data-step') !== String(step)));
        editSteps.forEach(s => s.classList.toggle('active', s.getAttribute('data-step') === String(step)));

        if (editBtnBack) editBtnBack.disabled = (step === 1);
        const isLast = (step === 3);
        if (editBtnNext) editBtnNext.classList.toggle('d-none', isLast);
        if (editBtnSubmit) editBtnSubmit.classList.toggle('d-none', !isLast);
      }

      function validateEditCurrentStep(){
        const pane = editPanes.find(p => p.getAttribute('data-step') === String(editCurrent));
        if (!pane) return true;
        
        // Get all required inputs (excluding file inputs which are optional when editing)
        const inputs = Array.from(pane.querySelectorAll('input:not([type="file"]), textarea, select'));
        let ok = true;
        let firstInvalid = null;
        
        inputs.forEach(el => {
          // Skip file inputs - they're optional when editing
          if (el.type === 'file') return;
          
          // Check if field is required
          if (el.hasAttribute('required')) {
            let isValid = true;
            
            // For text/number inputs and textareas, check if they have a value
            if (el.type === 'text' || el.type === 'number' || el.tagName === 'TEXTAREA' || el.tagName === 'SELECT') {
              const value = el.value ? String(el.value).trim() : '';
              isValid = value !== '';
            } else {
              // For other input types, use native validation
              isValid = el.checkValidity();
            }
            
            if (!isValid) {
              ok = false;
              if (!firstInvalid) firstInvalid = el;
              // Mark as invalid for visual feedback
              el.classList.add('is-invalid');
              el.classList.remove('is-valid');
            } else {
              // Mark as valid
              el.classList.remove('is-invalid');
              el.classList.add('is-valid');
            }
          }
        });
        
        if (!ok && editForm) {
          // Trigger validation UI
          editForm.classList.add('was-validated');
          // Focus first invalid input
          if (firstInvalid) {
            setTimeout(() => {
              firstInvalid.focus();
              firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }, 100);
          }
        }
        
        return ok;
      }

      if (editBtnNext) {
        editBtnNext.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          
          // Validate current step
          const isValid = validateEditCurrentStep();
          
          // If validation passes, move to next step
          if (isValid) {
            if (editCurrent < 3) {
              setEditActiveStep(editCurrent + 1);
            }
          }
        });
      }
      
      if (editBtnBack) {
        editBtnBack.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          if (editCurrent > 1) {
            setEditActiveStep(editCurrent - 1);
          }
        });
      }

      // Reset steps and render amenities on modal show
      editModalEl.addEventListener('shown.bs.modal', () => {
        setEditActiveStep(1);
        renderEditAmenities("");
        // Clear any validation states
        if (editForm) {
          editForm.classList.remove('was-validated');
          editForm.querySelectorAll('.is-invalid, .is-valid').forEach(el => {
            el.classList.remove('is-invalid', 'is-valid');
          });
        }
      });
