<% layout("/layouts/boilerplate") %>
  <link rel="stylesheet" href="/css/show.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <style>
    /* Visible by default; only animate/hide when JS adds .js-enabled */
    .section-fade { opacity: 1; transform: none; }
    .js-enabled .section-fade { opacity: 0; transform: translateY(10px); transition: opacity 400ms ease, transform 400ms ease; }
    .js-enabled .section-fade.in-view { opacity: 1; transform: none; }
    .flatpickr-day.disabled, .flatpickr-day.flatpickr-disabled {
      opacity: 0.5;
    }
  </style>
  <script>
    document.addEventListener('DOMContentLoaded',function(){
      document.body.classList.add('js-enabled');
      // Immediately reveal sections to avoid any timing issues
      document.querySelectorAll('.section-fade').forEach(el => el.classList.add('in-view'));
    });
  </script>

  <div class="row mt-3 mb-4">
    <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 mb-2 listing-title">
      <div class="d-flex align-items-center justify-content-between gap-2 flex-wrap">
        <div class="d-flex flex-column gap-1">
          <h3 class="fs-4 fs-md-3 fs-lg-2 m-0">
            <%= listing.title %>
          </h3>
          <div class="d-flex align-items-center gap-2 small text-muted">
            <span class="text-warning"><i class="fa-solid fa-star"></i></span>
            <span><%= typeof listing.avgRating !== 'undefined' ? listing.avgRating.toFixed ? listing.avgRating.toFixed(1) : listing.avgRating : '0.0' %> / 5</span>
            <span>•</span>
            <span><%= listing.reviewCount || 0 %> reviews</span>
          </div>
        </div>
        <div class="d-flex align-items-center gap-2">
          <i class="fa-solid fa-heart wishlist-icon <%= isWishlisted ? 'red-heart' : '' %>" data-listing-id="<%= listing._id %>" title="Add to wishlist" role="button" aria-label="Add to wishlist"></i>
          <button id="shareBtn" class="btn btn-sm btn-outline-dark px-3" aria-label="Share this listing">
            <i class="fa-solid fa-share-nodes me-1"></i> Share
          </button>
          <% if (currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-sm edit-btn px-3">Edit</a>
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm delete-btn px-3" aria-label="Delete this listing">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    </div>

    <div class="card col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 px-3 my-3 d-flex show-card listing-card">
      <div class="gallery">
        <% if (listing.images && listing.images.length > 0) { %>
          <% for (let i = 0; i < Math.min(listing.images.length, 3); i++) { %>
            <div class="gallery-item">
              <img src="<%= listing.images[i].url %>" alt="listing_image_<%= i %>" loading="lazy">
            </div>
          <% } %>
        <% } %>
      </div>
      <div class="card-body">
        <p class="card-text"><i>
            <%= listing.description %>
          </i></p>
        <div class="card-text price-tax-wrapper mb-2">
          <div class="price">
            <i class="fa-solid fa-indian-rupee-sign"></i>
            <%= listing.price.toLocaleString("en-IN") %> / Day <i class="tax-info">+ 18% GST</i>
          </div>
          <div class="tax-toggle">
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
              <label class="form-check-label" for="switchCheckDefault">Display total after tax</label>
            </div>
          </div>
        </div>

        <p class="card-text">
          <i class="fa-solid fa-location-dot me-1" style="color: #696969;"></i>
          <%= listing.location %>
        </p>
        <p class="card-text">
          <i class="fa-solid fa-globe me-1" style="color: #686868;"></i>
          <%= listing.country %>
        </p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center gap-2">
            <% if (listing.owner && listing.owner.profileImage) { %>
              <img src="<%= listing.owner.profileImage %>" alt="<%= listing.owner.username %> profile" width="48" height="48" class="rounded-circle border">
            <% } else { %>
              <div class="rounded-circle bg-dark text-white d-flex align-items-center justify-content-center" style="width:48px;height:48px;">
                <span class="fw-semibold"><%= listing.owner.username ? listing.owner.username[0].toUpperCase() : 'U' %></span>
              </div>
            <% } %>
            <div class="ms-2">
              <div class="fw-semibold"><%= listing.owner.username %></div>
              <div class="text-muted small">Hosted by</div>
            </div>
          </div>
          <!-- Book Now Button -->
          <% if (!(currUser && currUser._id.equals(listing.owner._id))) { %>
            <button class="btn btn-dark book-btn ps-5 pe-5" data-bs-toggle="modal" data-bs-target="#bookingModal">
              Book Now
            </button>
          <% } %>
        </div>
        <% if (listing.amenities && Object.keys(listing.amenities).length) { %>
          <hr class="my-3">
          <div class="mb-2">
            <h5 class="mb-2">What This Place Offers</h5>
            <% function iconFor(item){
                 const s = String(item).toLowerCase();
                 if(s.includes('wi-fi') || s.includes('wifi')) return 'fa-wifi';
                 if(s.includes('internet')) return 'fa-globe';
                 if(s.includes('air') || s.includes('conditioning')) return 'fa-snowflake';
                 if(s.includes('heating')) return 'fa-fire';
                 if(s.includes('shower') || s.includes('bathtub')) return 'fa-shower';
                 if(s.includes('tv') || s.includes('netflix')) return 'fa-tv';
                 if(s.includes('parking')) return 'fa-square-parking';
                 if(s.includes('pool')) return 'fa-person-swimming';
                 if(s.includes('kitchen') || s.includes('dining') || s.includes('cooking') || s.includes('dishes')) return 'fa-utensils';
                 if(s.includes('security') || s.includes('camera')) return 'fa-shield-halved';
                 if(s.includes('fire extinguisher')) return 'fa-fire-extinguisher';
                 if(s.includes('workspace') || s.includes('desk')) return 'fa-briefcase';
                 if(s.includes('gym') || s.includes('fitness')) return 'fa-dumbbell';
                 if(s.includes('laundry') || s.includes('washing') || s.includes('dryer')) return 'fa-soap';
                 if(s.includes('elevator')) return 'fa-elevator';
                 if(s.includes('wheelchair')) return 'fa-wheelchair';
                 if(s.includes('coffee') || s.includes('kettle')) return 'fa-mug-saucer';
                 if(s.includes('toiletries') || s.includes('toilet')) return 'fa-toilet-paper';
                 if(s.includes('hair dryer')) return 'fa-wind';
                 return 'fa-circle-check';
               } %>
            <div class="amenities-scroll">
              <div class="d-flex flex-column gap-2 amenities-list">
                <% Object.keys(listing.amenities).forEach(function(cat){ %>
                  <% if (Array.isArray(listing.amenities[cat]) && listing.amenities[cat].length) { %>
                  <div class="border rounded p-2 amenity-cat">
                    <div class="fw-semibold text-secondary mb-1"><%= cat %></div>
                    <div class="d-flex flex-wrap gap-2">
                      <% listing.amenities[cat].forEach(function(item){ %>
                        <span class="badge bg-light text-dark border px-2 py-1 hover-shadow amenity-badge">
                          <i class="fa-solid <%= iconFor(item) %> me-1"></i><%= item %>
                        </span>
                      <% }) %>
                    </div>
                  </div>
                  <% } %>
                <% }) %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Booking Modal -->
    <div class="modal fade" id="bookingModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content p-3">
          <div class="modal-header bg-dark text-white">
            <h5 class="modal-title">Book <%= listing.title %>
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <form id="bookingForm">
              <input type="hidden" id="listingId" value="<%= listing._id %>">

              <div class="mb-3">
                <label for="checkIn">Check-In</label>
                <input type="date" id="checkIn" class="form-control" name="checkIn" required>
              </div>

              <div class="mb-3">
                <label for="checkOut">Check-Out</label>
                <input type="date" id="checkOut" class="form-control" name="checkOut" required>
              </div>

              <div class="mb-3">
                <label>Guests</label>
                <input type="number" id="guests" class="form-control" min="1" value="1" required>
              </div>

              <!-- Price Calculation Box -->
              <div class="p-2 border rounded mb-3">
                <p><b>Price per Day:</b> ₹<span id="pricePerNight">
                    <%= listing.price %>
                  </span></p>
                <p><b>Days:</b> <span id="nightsCount">1</span></p>
                <p><b>Subtotal:</b> ₹<span id="subTotal">
                    <%= listing.price %>
                  </span></p>
                <p><b>GST (18%):</b> ₹<span id="gstAmount">
                    <%= (listing.price*0.18).toFixed(2) %>
                  </span></p>
                <p><b>Grand Total:</b> ₹<span id="grandTotal">
                    <%= (listing.price*1.18).toFixed(2) %>
                  </span></p>
              </div>

              <button type="submit" class="btn btn-dark w-100">Proceed to Pay</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Share Modal (Fallback) -->
    <div class="modal fade" id="shareModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content p-3">
          <div class="modal-header">
            <h5 class="modal-title">Share this listing</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label class="form-label">Link</label>
              <div class="input-group">
                <input type="text" id="shareUrlInput" class="form-control" readonly>
                <button class="btn btn-outline-secondary" id="copyShareUrlBtn">Copy</button>
              </div>
              <div id="copyStatus" class="form-text"></div>
            </div>
            <div class="d-flex gap-2 flex-wrap">
              <a id="shareWhatsapp" class="btn btn-sm btn-success" target="_blank" rel="noopener">
                <i class="fa-brands fa-whatsapp me-1"></i> WhatsApp
              </a>
              <a id="shareFacebook" class="btn btn-sm btn-primary" target="_blank" rel="noopener">
                <i class="fa-brands fa-facebook me-1"></i> Facebook
              </a>
              <a id="shareTwitter" class="btn btn-sm btn-dark" target="_blank" rel="noopener">
                <i class="fa-brands fa-x-twitter me-1"></i> X (Twitter)
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

        <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 mb-3 mt-3">
